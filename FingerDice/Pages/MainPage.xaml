<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FingerDice.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FingerDice.Pages.Controls"
    xmlns:models="clr-namespace:FingerDice.Models"
    xmlns:pageModels="clr-namespace:FingerDice.PageModels"
    xmlns:pullToRefresh="clr-namespace:Syncfusion.Maui.Toolkit.PullToRefresh;assembly=Syncfusion.Maui.Toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="{Binding Today}"
    x:DataType="pageModels:MainPageModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding NavigatedToCommand}" EventName="NavigatedTo" />
        <toolkit:EventToCommandBehavior Command="{Binding NavigatedFromCommand}" EventName="NavigatedFrom" />
        <toolkit:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="{StaticResource LayoutPadding}" Spacing="{StaticResource LayoutSpacing}">

                <controls:WinnerCard>
                    <controls:WinnerCard.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToWinnerPageCommand, x:DataType=pageModels:MainPageModel}" />
                    </controls:WinnerCard.GestureRecognizers>
                </controls:WinnerCard>

                <controls:GroupCard>
                    <controls:GroupCard.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToGroupCommand, x:DataType=pageModels:MainPageModel}" />
                    </controls:GroupCard.GestureRecognizers>
                </controls:GroupCard>


            </VerticalStackLayout>
        </ScrollView>

        <!--<controls:AddButton Command="{Binding AddTaskCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />-->
    </Grid>
</ContentPage>
