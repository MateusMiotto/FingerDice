<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FingerDice.Pages.WinnerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:f="clr-namespace:Fonts"
    xmlns:handler="clr-namespace:FingerDice.Utilities.Handlers"
    Title="Vencedor"
    BackgroundColor="White">

    <AbsoluteLayout x:Name="MainLayout">
        <Label
            x:Name="CountdownLabel"
            AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontSize="300"
            HorizontalTextAlignment="Center"
            IsVisible="False"
            Text=""
            TextColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}"
            VerticalTextAlignment="Center" />

        <handler:TouchSurface
            x:Name="TouchLayer"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Background="Transparent"
            InputTransparent="False"
            ZIndex="1" />
    </AbsoluteLayout>
</ContentPage>
