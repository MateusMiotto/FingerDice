<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FingerDice.Pages.WinnerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:handler="clr-namespace:FingerDice.Utilities.Handlers"
    xmlns:models="clr-namespace:FingerDice.Models"
    xmlns:pageModel="clr-namespace:FingerDice.PageModels"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
    Title="Winner"
    x:DataType="pageModel:WinnerPageModel">



    <AbsoluteLayout x:Name="MainLayout">

        <!--  Label central de contagem  -->
        <Label
            x:Name="CountdownLabel"
            AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontSize="300"
            HorizontalTextAlignment="Center"
            IsVisible="False"
            Text=""
            TextColor="{AppThemeBinding Dark={StaticResource White},
                                        Light={StaticResource Black}}"
            VerticalTextAlignment="Center" />

        <handler:TouchSurface
            x:Name="TouchLayer"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Background="Transparent"
            InputTransparent="False"
            ZIndex="1" />

    </AbsoluteLayout>
</ContentPage>